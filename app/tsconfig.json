{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    // "strict": true
  },
  "include": [
    "**/src/**/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
    "**/node_modules/**/*",
    "../node_modules/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}